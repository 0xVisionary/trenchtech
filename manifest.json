{
  "manifest_version": 3,
  "name": "TrenchTech",
  "version": "1.0",
  "description": "Visually resize trading-site buttons",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": "icons/icon-128.png",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content/content-script.js"],
    "run_at": "document_end"
  }]
} 